<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:id="@+id/recommendations_card"
        android:layout_width="400dp"
        android:layout_height="156dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        card_view:cardBackgroundColor="@color/black"
        card_view:cardCornerRadius="6dp">

        <ScrollView
            android:layout_width="360dp"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/recommendation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/raleway"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                 />

        </ScrollView>

        <Button
            android:id="@+id/recommendation_button1"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/recommendations_card"
            android:layout_marginStart="60dp"
            android:layout_marginTop="100dp"

            android:background="@drawable/ripple_for_toggle"
            android:fontFamily="@font/raleway"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/recommendation_button2"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/recommendations_card"
            android:layout_marginStart="190dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ripple_for_toggle"
            android:fontFamily="@font/raleway"
            android:textColor="@color/white" />


    </android.support.v7.widget.CardView>

</RelativeLayout>